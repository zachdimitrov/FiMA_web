<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FiMA</title>
    @Scripts.Render("~/bundles/jquery")
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/pure-min.css" integrity="sha384-nn4HPE8lTHyVtfCBi5yW9d20FjT8BJwUXyWZT9InLYax14RDjBj46LmSztkmNP9w" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/grids-responsive-min.css">
    @Styles.Render("~/Content/css")
    <meta name="description" content="Finance management" />
</head>
<body>
    <header>
        <nav>
            <div class="logo">
                @Html.ActionLink("FiMA", "Index", "Home", new { area = string.Empty }, new { @class = "page-brand" })
            </div>
            <div class="nav-bar">
                @Html.Partial("_LoginPartial")
            </div>
        </nav>
    </header>
    <main class="container">
        <div class="sidebar">
            <div class="burger">
                <div class="bar1"></div>
                <div class="bar2"></div>
                <div class="bar3"></div>
            </div>
            <div class="menu-item">
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>начало</a>
            </div>
            @Html.Partial("_SideMenu")
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </main>
    <footer>
        <p class="footer-content">&copy; @DateTime.UtcNow.Year - <b>FiМА</b> <a href="">Всички права са запазени.</a> </p>
    </footer>

    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/local")
</body>
</html>
