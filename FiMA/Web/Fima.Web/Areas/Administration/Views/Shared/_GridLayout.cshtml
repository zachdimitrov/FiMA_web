@using Fima.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FiMA</title>
    
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/grid")
    @Styles.Render("~/Content/pure")
    @Styles.Render("~/Content/css")
</head>
<body>
    <header>
        <nav>
            <div class="logo">
                @Html.ActionLink("FiMA", "Index", "Home", new { area = string.Empty }, new { @class = "page-brand" })
            </div>

            <div class="nav-bar">
                @Html.Partial("_LoginPartial")
            </div>
        </nav>
    </header>
    <main class="page-container">
        <div class="sidebar">
            <div class="burger">
                <div class="bar1"></div>
                <div class="bar2"></div>
                <div class="bar3"></div>
            </div>
            <div class="menu-item">
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>начало</a>
            </div>
            @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
            {
                Html.RenderPartial("_AdminMenu");
            }
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </main>
    <footer>
        <p class="footer-content">&copy; @DateTime.UtcNow.Year - <b>FiМА</b> <a href="">Всички права са запазени.</a> </p>
    </footer>

    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/grid")
    @Scripts.Render("~/bundles/local")
    @RenderSection("scripts", required: false)
</body>
</html>
