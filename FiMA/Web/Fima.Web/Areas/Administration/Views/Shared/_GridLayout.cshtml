@using Fima.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FiMA</title>

    @*===== Bootstrap =====*@
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    @*===== Grid.Mvc =====*@
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    @*===== Pure Css =====*@
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/pure-min.css" integrity="sha384-nn4HPE8lTHyVtfCBi5yW9d20FjT8BJwUXyWZT9InLYax14RDjBj46LmSztkmNP9w" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/grids-responsive-min.css">
    @*===== Local Css =====*@
    @Styles.Render("~/Content/css")

</head>
<body>
    <header>
        <nav>
            <div class="logo">
                @Html.ActionLink("FiMA", "Index", "Home", new { area = string.Empty }, new { @class = "page-brand" })
            </div>

            <div class="nav-bar">
                @Html.Partial("_LoginPartial")
            </div>
        </nav>
    </header>
    <main class="page-container">
        <div class="sidebar">
            <div class="burger">
                <div class="bar1"></div>
                <div class="bar2"></div>
                <div class="bar3"></div>
            </div>
            <div class="menu-item">
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>начало</a>
            </div>
            @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
            {
                Html.RenderPartial("_AdminMenu");
            }
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </main>
    <footer>
        <p class="footer-content">&copy; @DateTime.UtcNow.Year - <b>FiМА</b> <a href="">Всички права са запазени.</a> </p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/local")
</body>
</html>
