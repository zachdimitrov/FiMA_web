@model Fima.Web.Areas.FrontOffice.Models.Client.ClientRegisterViewModel
@{
    ViewBag.Title = "Клиенти";
}


<h2>Регистриране на клиент</h2>

<a class="pure-button button-right" href="@Url.Action("Index","Home", new { area = "BackOffice" })"><i class="fa fa-chevron-left"></i> бек офис</a>


@using (Html.BeginForm("Register", "Client", FormMethod.Post, new { @class = "pure-form", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.BaseFields.Identification, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.BaseFields.Identification, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BaseFields.EntityType, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.BaseFields.EntityType, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="pure-button pure-button-primary" value="регистрирай" />
        </div>
    </div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('[href*=register]').closest('.menu-item').addClass('selected');
    </script>
}